---
import categories from "../data/categories.json";
---

<aside class="w-full lg:w-72 shrink-0 space-y-10">
    <!-- Categories -->
    <section>
        <h3
            class="text-xs font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400 mb-6"
        >
            Collections
        </h3>
        <div class="flex flex-col gap-2">
            <button
                class="category-btn group flex items-center justify-between px-4 py-3 rounded-xl transition-all hover:bg-slate-100 dark:hover:bg-white/5 active"
                data-category="all"
            >
                <div class="flex items-center gap-3">
                    <span
                        class="material-symbols-outlined text-slate-400 group-[.active]:text-primary transition-colors"
                        >grid_view</span
                    >
                    <span class="text-sm font-medium">All Collections</span>
                </div>
                <span
                    class="material-symbols-outlined text-sm opacity-0 group-[.active]:opacity-100 text-primary"
                    >check</span
                >
            </button>
            {
                categories.map((cat) => (
                    <button
                        class="category-btn group flex items-center justify-between px-4 py-3 rounded-xl transition-all hover:bg-slate-100 dark:hover:bg-white/5"
                        data-category={cat.id}
                    >
                        <div class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-slate-400 group-[.active]:text-primary transition-colors">
                                {cat.icon}
                            </span>
                            <span class="text-sm font-medium">{cat.title}</span>
                        </div>
                        <span class="material-symbols-outlined text-sm opacity-0 group-[.active]:opacity-100 text-primary">
                            check
                        </span>
                    </button>
                ))
            }
        </div>
    </section>

    <!-- Price Range -->
    <section>
        <div class="flex items-center justify-between mb-6">
            <h3
                class="text-xs font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400"
            >
                Price Range
            </h3>
            <span
                id="price-display"
                class="text-xs font-bold text-primary px-2 py-1 bg-primary/10 rounded"
                >₹10,000+</span
            >
        </div>
        <div class="px-2">
            <input
                id="price-range"
                type="range"
                min="0"
                max="10000"
                step="100"
                value="10000"
                class="w-full h-1.5 bg-slate-200 dark:bg-white/10 rounded-lg appearance-none cursor-pointer accent-primary"
            />
            <div
                class="flex justify-between mt-3 text-[10px] font-bold text-slate-400 uppercase tracking-tighter"
            >
                <span>₹0</span>
                <span>₹10,000+</span>
            </div>
        </div>
    </section>
</aside>

<style>
    .category-btn.active {
        background-color: color-mix(
            in srgb,
            var(--color-primary) 10%,
            transparent
        );
        color: var(--color-primary);
    }
</style>
